{
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "../build",
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2016"
  },
  "include": [
    "../src/**/*.ts",
    "../test/**/*.ts"
	],
  "exclude": [
    "../node_modules"
  ]
}
